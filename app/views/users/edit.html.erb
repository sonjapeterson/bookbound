<h1>Edit profile</h1>

<%= form_for(current_user) do |f| %>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br>

	<%= f.label :location %>
	<%= f.text_field :location %>
	<br>

	<%= f.label :gender %>
	<%= f.select :gender, options_for_select([["Female", "female"], ["Male", "male"], ["Other", "other"]], current_user.gender) %>
	<br>

	<%= f.submit %>
<% end %>