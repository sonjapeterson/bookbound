<div class="row">
<div class="large-12 small-12 small-centered columns roundbox outer">
<h3>Book Selected</h3>
  <div class="row roundbox outer">
      <div class="large-1 small-4 columns">
        <img src='<%= @book.image_link %>' class="bookimage">
      </div>
      <div class="large-4 small-8 columns">
        <b> <%= @book.title %> </b>
        <br>
        by <%= @book.authors %>
        <br> 
        ISBN: <%= @book.isbn %>
        <br>
        Published by: <%= @book.publisher %>
      </div>
      <div class="large-7 columns show-for-medium-up"> 
        <% if @book.description.to_s.length > 450 %>
        <%= @book.description.to_s[0..450] %>
        <% else %>
        <%= @book.description %>
        <% end %>
      </div>
    </div>
</div>
</div>

<div class="row">
	<div class="large-12 small-12 columns roundbox outer">
    <div class="row">
      <div class="large-12 small-12 columns">
		    <h1>Find a Friend</h1>
        <h6>Friends from Facebook who are registered with us.</h6>
      </div>
    </div>

    <%= form_tag('searchusers', {id: "searchusers"}) do %>
      <div class="row">
        <div class="large-10 small-12 columns">
          <%= text_field_tag 'starts_with', nil, placeholder: 'Search by name, location, or description keyword' %>
        </div>
        <div class="large-2 small-12 columns">
          <%= hidden_field_tag("isbn", params[:isbn]) %>
          <%= submit_tag "Search", :class => 'button small radius' %>
        </div>
      </div>
    <% end %>

    <table class="large-12 small-12 columns">
      <% @friends.each_with_index do |(friend, score),index| %>
        <tr>
            <td class="show-for-medium-up"><img src=<%= friend.image %>></td>
            <td><%= link_to friend.name, "#", "data-reveal-id" => "myModal-#{index}" %></td>

            <!-- friend profile modal starts here -->
            <div id="myModal-<%= index %>" class="reveal-modal" data-reveal>
              <div class="row">
              <div class="large-12 medium-12 small-12 columns roundbox outer">

              <h2><%= friend.name %> </h2>
              <div class="large-6 small-12 columns">
                <div  style="background-image: url(<%= friend.image + '?type=large'%>); background-position: center center; background-size: cover; height:200px; width: 200px; border-radius: 10%;" > </div> <br>
                <% if (friend.age != nil && friend.location != nil && friend.location != '' ) %>
                Personal info <h4><%= friend.location %></h4>
                <h4><%= friend.gender.capitalize + ', ' + friend.age.to_s %></h4>
                <% else %>
                This user has not completed profile info.
                <%end %>
              </div>


              <div class="large-6 small-12 columns">
              About <h5> <%= friend.description %> </h5>
                Favorite books <h5><%= friend.fav_books %></h5>
                Favorite genres <h5>
              <% result = "" %>
              <% friend.genre.attributes.each_pair do |key, value| %>
                <% if value == 1 && key != "user_id" && key != "id"%>
                  <% result += key + ", " %>
                <% end %>
              <% end %>
              <%= result[0..(result.length - 3)] %> </h5>
            

              Favorite authors <h5><%= friend.fav_authors %></h5>
              Completed books <h5>
              <% friend.groups.each do |group| %>
                <% if group.status == false %>
                  <%= group.book.title.split(":")[0]  %><br>
                <% end %>
              <% end %>

            </div>
              </div>
          </div>
              <a class="close-reveal-modal">&#215;</a>
          </div>
          <!-- friend profile modal ends -->

            <td class="show-for-medium-up"><%= friend.age %></td>
            <td class="show-for-medium-up"><%= friend.location %></td>
            <td class="show-for-medium-up"><%= friend.description %></td>
            <td><%= score.to_i %>% compatible</td>
            <td>
              <%= form_for(@group) do |f| %>
                <%= hidden_field_tag("newuser", friend.id) %>
                <%= hidden_field_tag("isbn", params[:isbn]) %>
                <%= f.submit "Select", :class => "button small radius" %>
              <% end %>
            </td>
        </tr>

      <% end %>
    </table>

  </div>
</div>