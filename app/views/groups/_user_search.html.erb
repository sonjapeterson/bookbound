<div class="row">
<div class="large-12 small-12 small-centered columns">
<h3>Book Selected</h3>
<table>
  <tr>
    <td><%= image_tag(@book.image_link, :size => "60") %></td>
    <td><%= @book.title %></td>
    <td><%= @book.authors %></td>
    <td>ISBN: <%= @book.isbn %>
      <br>
      Published by: <%= @book.publisher %>  
    </td>
  </tr>
</table>
</div>
</div>
<div class="row">
<div class="large-12 small-12 small-centered columns">
<h1>Find a Friend</h1>
</div>
</div>
<%= form_tag('searchusers') do %>
<div class="row">
<div class="large-10 small-12 columns">
<%= text_field_tag 'starts_with', nil, placeholder: 'Search by name, location, or description keyword' %>
</div>
<%= hidden_field_tag("isbn", params[:isbn]) %>
<%= submit_tag "Search", :class => 'button small radius' %>
</div>
</div>
<% end %>

<p>
<h1>Read with a Rando</h1>
	<% @randos.each do |rando, score| %>
		<p>
			<%= link_to rando.name, "#", "data-reveal-id" => "myModal" %><br>
			<% if !rando.description.nil? %><%= rando.description %><br><% end %>
			<%= score.to_i %>%
			<div id="myModal" class="reveal-modal" data-reveal>
			  <h2><%= rando.name %></h2>
			  <p class="lead"><%= rando.description %></p>
			  <img src=<%= rando.image %>>
				<br>

				Email: <%= rando.email %><br>
				Location: <%= rando.location %><br>
				Gender: <%= rando.gender %><br>
				Age: <%= rando.age %><br>
				Description: <%= rando.description %><br>
				Favorite books: <%= rando.fav_books %><br>

				Favorite genres:
				<% result = "" %>
				<% rando.genre.attributes.each_pair do |key, value| %>
					<% if value == 1 && key != "user_id" && key != "id"%>
						<% result += key + ", " %>
					<% end %>
				<% end %>
				<%= result[0..(result.length - 3)] %>
				<br>

				Favorite authors: <%= rando.fav_authors %><br>
				Completed books:
				<% rando.groups.each do |group| %>
					<% if group.status == false %>
						<%= group.book.title %><br>
					<% end %>
				<% end %><br>
				Ongoing books:
				<% rando.groups.each do |group| %>
					<% if group.status == true %>
						<%= group.book.title %><br>
					<% end %>
				<% end %><br>
			  <a class="close-reveal-modal">&#215;</a>
			</div>
		</p>
	<% end %>
</p>
