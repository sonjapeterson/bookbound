<%= link_to "Show timeline view", group_path(params[:id]) %>

<%= form_for(@note) do |f| %>
	<%= f.label :body %>
	<%= f.text_field :body %>

	<%= f.label :pagenumber %>
	<%= f.text_field :pagenumber %>

	<%= f.hidden_field(:group_id, value: @group.id) %>
	<%= f.hidden_field(:user_id, value: current_user.id) %>
	<%= f.hidden_field(:view_type, value: "list") %>

	<%= f.submit %>
<% end %>

<% @group.notes.order('pagenumber DESC').each do |note| %>
<p>
	written by: <%= User.find(note.user_id).name %>
	<%= note.body %>, 
	pg <%= note.pagenumber %>
	<br>
</p>
<% end %>