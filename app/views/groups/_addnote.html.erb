<div class="row">
    <div class="large-12 small-12 columns roundbox outer">
		<dl class="accordion" data-accordion>
			<dd class="accordion-navigation">
				<a href="#panel1"><h3 class="text-center">Add a note <span class="accordion-icon"></span></h3></a>
				<div id="panel1" class="content">
					<div class="row">
			  			<div class="large-2 small-12 columns">
			  				&nbsp;
						</div>
			  			<div class="large-8 small-12 columns text-center">
						    <%= form_for(@note) do |f| %>
						    <%= f.number_field :pagenumber, :placeholder => "Page Number" %><br>
			        		<%= f.text_area :body, :placeholder => "Your brilliant comment here...", :cols => 40, :rows => 5 %>
						    <%= f.hidden_field(:group_id, value: @group.id) %>
						    <%= f.hidden_field(:user_id, value: current_user.id) %>
						    <%= f.hidden_field(:view_type, value: display_type) %>
						 	<%= f.submit :class => "button small radius text-center" %>
							<% end %>
			  			</div>
						<div class="large-2 small-12 columns">
							&nbsp;
						</div>
					</div>
				</div>	
		  	</dd>
		</dl>
	</div>
</div>