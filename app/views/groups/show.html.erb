<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>

<!-- BEGIN TimelineJS -->
<script type="text/javascript" src="http://cdn.knightlab.com/libs/timeline/latest/js/storyjs-embed.js"></script>

<script>
    $(document).on('ready page:load',function() {
        createStoryJS({
            type:       'timeline',
            width:      "100%",
            height:     '500',
            source:     '<%= @notes %>',
            embed_id:   'my-timeline'
        });
    });
</script>
</div>
<div class="row">
    <div class="large-12 small-12 columns text-center extraspace">
<ul class="button-group radius even-2">
  <li><a href="#" class="button">Timeline View</a></li>
  <li><a href="#" class="button">List View</a></li>
</ul>
</div>
</div>
<div class="row">
<div class="large-12 small-12 columns roundbox outer">
<div style="z-index: 1;" id="my-timeline" class="large-12 small-12 columns"></div>
</div>
</div>

<div class="row">
    <div class="large-12 small-12 columns roundbox outer">
        <h2>Add a note</h2>
<div class="row">

<%= form_for(@note) do |f| %>
<div class="large-2 small-2 columns">
    <%= f.text_field :pagenumber, :placeholder => "Page Number" %>
</div>

<div class="large-8 small-10 columns">
    	<%= f.text_field :body, :placeholder => "Your brilliant comment here..." %>
</div>

<div class="large-2 small-12 columns">
    <%= f.hidden_field(:group_id, value: @group.id) %>
    <%= f.hidden_field(:user_id, value: current_user.id) %>
    <%= f.hidden_field(:view_type, value: "timeline") %>
	<%= f.submit :class => "button small radius" %>
<% end %>
</div>
</div>
</div>
</div>

<% if @group.request.requester_id == current_user.id %>
    <p>
        <%= form_tag('finish_book') do %>
            <%= hidden_field_tag("group", @group.id) %>
            <%= submit_tag "Mark book as completed" %>
        <% end %>
    </p>
<% end %>

<script type="text/javascript">
    //Place as last thing before the closing </body> tag
    if(location.search.indexOf('reloaded=yes') < 0){
        var hash = window.location.hash;
        var loc = window.location.href.replace(hash, '');
        loc += (loc.indexOf('?') < 0? '?' : '&') + 'reloaded=yes';
        // SET THE ONE TIME AUTOMATIC PAGE RELOAD TIME TO 5000 MILISECONDS (5 SECONDS):
        setTimeout(function(){window.location.href = loc + hash;}, 1);
    }
</script>